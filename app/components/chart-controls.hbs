<div class="chart__controls">
  <div class="chart__control">
    <label>
      <h2>Ascending Order:</h2>
      <Input
        class="chart__control__checkbox"
        @id="filter-ascending"
        @type="checkbox"
        @checked={{@filterAscending}}
      />
    </label>
  </div>
  <div class="chart__control">
    <label>
      <h2>Enabled Advanced Filtering:</h2>
      <Input
        class="chart__control__checkbox"
        @id="filter-advanced"
        @type="checkbox"
        @checked={{@filteringEnabled}}
      />
    </label>
  </div>
  {{#if @filteringEnabled}}
    <div class="chart__control">
      <label>
        <h2>Remove Scores That Are Less Than:</h2>
        <Input
          class="chart__control__input"
          @id="filter-score"
          @value={{@filterMinimumScore}}
          @type="number"
          disabled={{if @filteringEnabled false true}}
        />
      </label>
    </div>
  {{/if}}
</div>
