{{#if this.hasData}}
  <div class="grid__item--full grid__container--column">
    <MovieListItemHeader />
    {{#each @movies as |movie|}}
      <MovieListItem @movie={{movie}} @size="w200"/>
    {{/each}}
  </div>
{{else}}
  <Error @title="No Data" @message="Please see README.md for setup instructions." />
{{/if}}
